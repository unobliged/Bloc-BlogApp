<% @post.comments.each do |comment| %>
	<div class="comment">
	<p><%= comment.content %></p>
	<p>Comment by <%= link_to User.find(comment.user_id).username, User.find(comment.user_id) %></p>
	<p><i>Last updated: <%= comment.updated_at.localtime %></i></p>
	<% if current_user == User.find(comment.user_id) %>
		<p><%= link_to "Edit this comment", edit_comment_path(comment) %>
			<%= link_to "Delete this comment", comment, method: :delete, 
				data: { confirm: "Delete this comment?" } %>
		</p>
	<% end %>
	</div>
<% end %>
