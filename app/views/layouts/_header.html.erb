<header>
  <nav>
    <h1>
      <% if user_signed_in? %>
        <%= link_to "Blogging App", current_or_guest_user %></h1>
      <% else %>  
        <%= link_to "Blogging App", root_path %></h1>
      <% end %>
    </h1>
    <ul>          
      <li><%= link_to "Blogs", blogs_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Contact", contact_path %></li>
      <% if user_signed_in? %>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
    </ul>
    <form>
      <input type="text" value="Search All Blogs" onfocus="if (this.value=='Search All Blogs') this.value='';" />
    </form>
  </nav>
</header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
